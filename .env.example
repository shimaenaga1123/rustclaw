# Get from: https://discord.com/developers/applications
DISCORD_TOKEN=your_discord_bot_token_here

# Bot Owner (Discord User ID)
# Right-click your profile in Discord -> Copy User ID
OWNER_ID=your_discord_user_id_here

# Anthropic-compatible API Configuration
# Works with any Anthropic-compatible API endpoint (Claude, Minimax, etc.)
API_KEY=your_api_key_here
API_URL=https://api.anthropic.com/v1
MODEL=claude-3-5-sonnet-20241022

# Brave Search API (Optional)
# Get from: https://brave.com/search/api/
BRAVE_API_KEY=your_brave_api_key_here

# Data Directory
DATA_DIR=data

# Context Management
CONTEXT_LIMIT=128000
COMMAND_TIMEOUT=30

# Sandbox (for non-owner command execution)
# Docker image with mise for sandboxed execution
SANDBOX_IMAGE=jdxcode/mise:latest

# Logging
RUST_LOG=info